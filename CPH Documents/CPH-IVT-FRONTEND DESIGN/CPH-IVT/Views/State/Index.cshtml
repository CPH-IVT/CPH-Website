@model IEnumerable<CPH_IVT.Models.State>

@{
    ViewData["Title"] = "Index";
}

<h1>Select a State</h1>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abbreviation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FIPS)
            </th>
        </tr>
    </thead>
    <tbody>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-route-id="@item.FIPS" asp-action="indicators">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abbreviation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FIPS)
            </td>
        </tr>
        }
    </tbody>
</table>
