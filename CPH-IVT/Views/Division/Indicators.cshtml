@model IEnumerable<CPH_IVT.Models.HealthIndicator>

@{
    ViewData["Title"] = "Indicators";
}

<h1>Choose an Indicator</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Indicator" asp-action="Index" asp-route-id="@item.Name">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
            </tr>
        }
    </tbody>
</table>
